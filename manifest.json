{
    "manifest_version": 3,
    "name": "Lingodeer Improvements",
    "version": "1.0",

    "description": "Improves quality-of-life for the Lingodeer web client.",

    "developer": {
        "name": "Evan Hock",
        "url": "https://github.com/Evan-Hock"
    },

    "icons": {
        "32": "icons/32-lingodeer.png",
        "64": "icons/64-lingodeer.png",
        "128": "icons/128-lingodeer.png"
    },

    "content_scripts": [
        {
            "matches": [
                "*://*.lingodeer.com/*"
            ],
            "js": ["content_script.js"]
        }
    ],
    
    "browser_specific_settings": {
        "gecko": {
            "id": "{f13ea180-3311-43df-ae1e-77310d139fb4}"
        }
    }
}